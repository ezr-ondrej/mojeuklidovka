<div class="page">

    {{ header | raw }}

    <div id="hero" class="hero hero-middle hero-s" style="background-image: url('{{ url() }}/assets/web/img/blog-moje-uklidovka.jpg')">

        <div class="hero_content js-heroContent is-active">
            <h1 class="hero_title">
                Novinky
            </h1>
            <p class="hero_text"><a href="/space/news/create">Přidat novinku</a></p>
        </div>
    </div>

    <div class="bg-grayLight">
        {% if newsList | length >= 1 %}

            {% for item in newsList %}
                <div class="article">
                    <div class="article_content">
                        <a href="{{ url() }}/novinky/{{ item.slug }}" title="{{ item.title }}">
                            <h2 class="fs-xl"><span class="underline-grayLight">{{ item.title }}</span></h2>
                        </a>
                        <p class="space-xl">{{ item.introduction }}</p>
                        <a class="btn btn-blue btn-s spaceRight-m" href="{{ url() }}/space/news/edit/{{ item.id }}" title="Upravit článek">Upravit</a>
                        <a class="btn btn-blue btn-s" onClick="if(!confirm('Odstranit článek?')) return false;" href="{{ url() }}/space/news/delete/{{ item.id }}" title="Smazat článek">Smazat</a>
                    </div>
                </div>
            {% endfor %}

            {{ data.newsListLinks | raw }}

        {% endif %}

    </div>

    {{ footer | raw }}

</div>